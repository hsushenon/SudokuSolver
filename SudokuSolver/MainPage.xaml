            <TextBox Name="txtR2C9" Grid.Row="1" Grid.Column="8"  Style="{StaticResource MyTextBoxRightStyle}"/>

            <TextBox Name="txtR3C1" Grid.Row="2" Grid.Column="0"  Style="{StaticResource MyTextBoxLeftStyle}" />
            <TextBox Name="txtR3C2" Grid.Row="2" Grid.Column="1"  Style="{StaticResource MyTextBoxStyle}"/>
